                    <Label Grid.Column="1" Content="The quintessential, rear-engine sports car." Margin="-290 790 0 0" Foreground="White" FontSize="25" FontWeight="Medium" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    <Label Grid.Column="1" Content="From $ 115,400*" Margin="-640 830 0 0" Foreground="White" FontSize="15" FontWeight="Medium" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                    <Button
                        Grid.Column="1"
                        Command="{Binding showConstructYour911Command}"
                        CommandParameter="{Binding ElementName=DashBoardPage}"
                        Width="140"
                        Height="50"
                        Background="White"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="-620 780 0 0"
                        Content="Build your 911"
