<Page x:Class="Porsche.Views.Pages.DashBoardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Porsche.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d"
      x:Name="DashBoardPage"
      
      Title="Porsche HOME - Porsche USA"
      >

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="White" Height="8000" Width="1800">
            <Grid.RowDefinitions>
                <RowDefinition Height="1010"/>
                <RowDefinition Height="550"/>
                <RowDefinition Height="2800"/>
                <RowDefinition Height="600"/>
                <RowDefinition Height="800"/>
                <RowDefinition Height="560"/>
                <RowDefinition Height="1010"/>
                <RowDefinition Height="1400"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Name="GridRow">
                <MediaElement x:Name="MediaElementBackground" Grid.Row="0" Source="../../../StaticFiles/Videos/Porsche Taycan Turbo S.mp4" HorizontalAlignment="Left" LoadedBehavior="Play"/>
                <Button
                    Grid.Row="0"
                    Command="{Binding DashBoaardPageCommand}"
                    CommandParameter="{Binding ElementName=DashBoardPage}"
                    Width="220"
                    Height="50"
                    BorderThickness="2"
                    Background="Transparent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0 5 0 0"
                    BorderBrush="Transparent" >
                </Button>
                <Image Grid.Row="0" Source="../../../StaticFiles/Image/Icons/Porsche.png" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 25 0 0"/>

                <Button
                    Grid.Row="0"
                    Command="{Binding ShowLoginPageCommand}"
                    CommandParameter="{Binding ElementName=DashBoardPage}"
                    Width="50"
                    Height="40"
                    BorderThickness="2"
                    Background="Transparent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0 25 100 0"
                    BorderBrush="Transparent" >
                    <materialDesign:PackIcon Kind="Account" Grid.Row="0" Foreground="White" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0"/>
                </Button>
                <materialDesign:PackIcon Kind="Menu" Grid.Row="0" Foreground="White" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90 25 0 0"/>
                <Label Content="Menu" Grid.Row="0" Foreground="White"  HorizontalAlignment="Left" FontSize="15" VerticalAlignment="Top" Margin="120 28 0 0" FontFamily="Arial" FontWeight="Medium"/>

                <Label Content="Fully-jaw-" Grid.Row="0" Foreground="White"  HorizontalAlignment="Left" FontSize="120" VerticalAlignment="Bottom" Margin="200 28 0 450" FontFamily="Arial" FontWeight="Medium"/>
                <Label Content="dropping-" Grid.Row="0" Foreground="White"  HorizontalAlignment="Left" FontSize="120" VerticalAlignment="Bottom" Margin="200 28 0 330" FontFamily="Arial" FontWeight="Medium"/>
                <Label Content="electric." Grid.Row="0" Foreground="White"  HorizontalAlignment="Left" FontSize="120" VerticalAlignment="Bottom" Margin="200 28 0 220" FontFamily="Arial" FontWeight="Medium"/>

                <Button
               Grid.Row="0"
               x:Name="StopBtn"
               Command="{Binding StopCommand}"
               CommandParameter="{Binding ElementName=GridRow}"
               Width="40"
               Height="40"
               BorderThickness="2"
               Background="Transparent"
               Foreground="White"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Margin="0 800 100 0"
               IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
               Style="{StaticResource MaterialDesignPaperLightButton}"
               BorderBrush="White" >
                    <materialDesign:PackIcon Kind="Pause" Grid.Row="0" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0"/>
                </Button>
            </Grid>

            <Button
                Command="{Binding ShowBuildYourTaycanPageCommand}"
                CommandParameter="{Binding ElementName=DashBoardPage}"
                Width="240"
                Height="50"
                Foreground="White"
                Background="Transparent"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="210 0 0 130"
                Content="The Taycan. Starting at $90,900"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignPaperLightButton}"
                BorderBrush="White" />

            <!--Home Stage Image Containers -->

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="20" Margin="200 150 0 100" >
                    <Border.Background>
                        <ImageBrush ImageSource="../../../StaticFiles/Image/HomeStageImageContainer/1.png" />
                    </Border.Background>
                </Border>

                <Label Grid.Column="0" Content="The New Cayenne E-Hybrid Coupe." Margin="230 400 0 0" Foreground="White" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" HorizontalAlignment="Left"/>
