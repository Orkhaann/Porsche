                    <Label Grid.Column="0" Content="From $ 68,300*" Margin="-100 830 0 0" Foreground="White" FontSize="15" FontWeight="Medium" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                    <Button
                        Grid.Column="0"
                        Command="{Binding showConstructYour718Command}"
                        CommandParameter="{Binding ElementName=DashBoardPage}"
                        Width="140"
                        Height="50"
                        Background="White"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="-70 780 0 0"
                        Content="Build your 718"
