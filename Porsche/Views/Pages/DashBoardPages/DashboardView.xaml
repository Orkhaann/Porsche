                <Border Grid.Column="2" CornerRadius="20" Margin="0 150 200 100">
                    <Border.Background>
                        <ImageBrush ImageSource="../../../StaticFiles/Image/HomeStageImageContainer/2.png"/>
                    </Border.Background>
                </Border>

                <Label Grid.Column="2" Content="Look Back on RR7." Margin="30 400 0 0" Foreground="White" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" HorizontalAlignment="Left"/>
                <Button
                    Grid.Column="2"
                    Command="{Binding OpenMEPageCommand}"
                    CommandParameter="{Binding ElementName=DashBoardPage}"
                    Width="30"
                    Height="30"
                    BorderThickness="2"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    Margin="0 280 230 0"
                    BorderBrush="Transparent" />
                
                <materialDesign:PackIcon Kind="ChevronRight" Width="30" Height="30" HorizontalAlignment="Right" Foreground="White" Grid.Column="2" Margin="0 400 230 0"/>
            </Grid>

            <!--Home Stage Models Containers -->

            <Label Grid.Row="2" Content="Models" Margin="0 100 0 0" Foreground="Black" FontSize="45" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1000"/>
                    <RowDefinition Height="800"/>
                    <RowDefinition Height="1000"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="10" Margin="300 200 20 50">
                        <Border.Background>
                            <ImageBrush ImageSource="../../../StaticFiles/Image/HomeStageModelsContainer/718.png"/>
                        </Border.Background>
                    </Border>

