                <TextBox
                    Height="50"
                    materialDesign:HintAssist.Hint="Enter City or ZIP Code"
                    AcceptsReturn="True"
                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" 
                    Margin="250 50 200 0" />

                <Image Margin="200 100 0 100" Grid.Column="1" Source="../../../StaticFiles/Image/FindYourNewOrPreOwnedPorscheContainer/FindYourNewOrPreOwnedPorsche.png"/>

            </Grid>

