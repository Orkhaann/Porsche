                Grid.Column="1"
                Command="{Binding ShowBuildYour911PageCommand}"
                CommandParameter="{Binding ElementName=DashBoardPage}"
                Width="30"
                Height="30"
                BorderThickness="2"
                Background="Transparent"
                HorizontalAlignment="Right"
                Margin="0 280 140 0"
                BorderBrush="Transparent" />
                
