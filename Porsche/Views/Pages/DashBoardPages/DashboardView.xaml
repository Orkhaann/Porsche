                    Grid.Column="0"
                    Command="{Binding ShowBuildYourCayennePageCommand}"
                    CommandParameter="{Binding ElementName=DashBoardPage}"
                    Width="30"
                    Height="30"
                    BorderThickness="2"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    Margin="0 280 40 0"
                    BorderBrush="Transparent" />
                
                <materialDesign:PackIcon Kind="ChevronRight" Width="30" Height="30" HorizontalAlignment="Right" Foreground="White" Grid.Column="0" Margin="0 400 40 0"/>

                <Border Grid.Column="1" CornerRadius="20" Margin="100 150 100 100">
                    <Border.Background>
                        <ImageBrush ImageSource="../../../StaticFiles/Image/HomeStageImageContainer/3.png"/>
                    </Border.Background>
                </Border>

                <Label Grid.Column="1" Content="The New 911 S/T." Margin="130 400 0 0" Foreground="White" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" HorizontalAlignment="Left"/>
