                <Label Grid.Row="1" Content="Select your favorite Porsche" FontFamily="Arial" FontWeight="SemiBold" Foreground="Black" FontSize="50" Margin="200 100 0 2000" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <TextBox
