CommandParameter="{Binding ElementName=BuildYourTaycanPage}"
                    Width="30"
                    Height="30"
                    BorderThickness="2"
                    Background="Transparent"
                    HorizontalAlignment="Left"
                    Margin="406 0 0 110"
                    BorderBrush="Transparent" />
